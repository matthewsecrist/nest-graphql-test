{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/db/(.*)": "<rootDir>/../libs/db/src/$1",
    "@app/db": "<rootDir>/../libs/db/src",
    "@app/users/(.*)": "<rootDir>/../libs/users/src/$1",
    "@app/users": "<rootDir>/../libs/users/src",
    "@app/posts/(.*)": "<rootDir>/../libs/posts/src/$1",
    "@app/posts": "<rootDir>/../libs/posts/src",
    "@app/categories/(.*)": "<rootDir>/../libs/categories/src/$1",
    "@app/categories": "<rootDir>/../libs/categories/src",
    "@app/friendships/(.*)": "<rootDir>/../libs/friendships/src/$1",
    "@app/friendships": "<rootDir>/../libs/friendships/src"
  }
}