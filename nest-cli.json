{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "users": {
      "type": "library",
      "root": "libs/users",
      "entryFile": "index",
      "sourceRoot": "libs/users/src",
      "compilerOptions": {
        "tsConfigPath": "libs/users/tsconfig.lib.json"
      }
    },
    "posts": {
      "type": "library",
      "root": "libs/posts",
      "entryFile": "index",
      "sourceRoot": "libs/posts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/posts/tsconfig.lib.json"
      }
    },
    "categories": {
      "type": "library",
      "root": "libs/categories",
      "entryFile": "index",
      "sourceRoot": "libs/categories/src",
      "compilerOptions": {
        "tsConfigPath": "libs/categories/tsconfig.lib.json"
      }
    },
    "friendships": {
      "type": "library",
      "root": "libs/friendships",
      "entryFile": "index",
      "sourceRoot": "libs/friendships/src",
      "compilerOptions": {
        "tsConfigPath": "libs/friendships/tsconfig.lib.json"
      }
    }
  }
}